generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int
  image_url   String?
}

model Order {
  id             Int      @id @default(autoincrement())
  user_name      String
  user_email     String
  address        String
  payment_method String
  total          Float
  created_at     DateTime @default(now())
}
